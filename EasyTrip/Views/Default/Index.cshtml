@using EasyTrip.Models
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="header-banner">
    <div class="wrap">
        <div class="banner">
            <div class="indent">
                <h2 class="indent-left margin-bot">YTravel</h2>
                <div class="banner-left">
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/web/images/glass.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Restoranlar</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/web/images/flight.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Uçuşlar</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/web/images/group.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Yapılacaklar</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/web/images/key.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Araba Kiralama</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="header_bottom_right_images">
                    <div class="slider" style="height:355px;width: 650px; ">
                        <ul class="rslides" id="slider1" ;>
                            @foreach (var x in Model)
                            {
                                <li><img id="p1" src="@x.BlogImage" ></li> 
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </div>
</div>
<div class"content">
    <div class="wrap">
        <div class="wrapper">
            <div class="con-top">
                <h3>YTravel seyahat bloguna hepiniz hoşgeldiniz!</h3>
                <p>Merhaba ben Yiğit Tanyel.Mvc 5 ile oluşturduğum bu blog sitesine hepiniz hoş geldiniz.Umarım beğenirsiniz.</p>
            </div>
            @Html.Action("Partial1", "Default")
            <div class="grids">
                <div class="box1">
                    
                    @Html.Action("Partial3","Default")
                    @Html.Action("Partial4","Default")

                    <div class="clear"></div>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    #p1{
        height:365px;
        width:650px;
    }
</style>