@using EasyTrip.Models
@model List<Yorumlar>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h2>Tüm Yorumlar</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Kullanıcı Adı</th>
            <th scope="col">Mail</th>
            <th scope="col">Yorum</th>
            <th scope="col">Blog</th>
            <th scope="col">Sil</th>
            <th scope="col">Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td><b style="color:blue;">@x.Kullanici</b></td>
                <td>@x.Mail</td>
                <td>@x.Yorum </td>
                <td>@x.Blog.Baslik </td>
                <td><a href="/Yorumlar/YorumSil/@x.YorumlarID" class="btn btn-danger" onclick="return confirm('Silmek istediğinizden emin misiniz?');">Sil</a></td>
                <td><a href="/Yorumlar/YorumGetir/@x.YorumlarID" class="btn btn-primary">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>

